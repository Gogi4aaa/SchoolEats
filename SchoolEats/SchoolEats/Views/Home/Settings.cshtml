@using SchoolEats.Web.Infrastructure.Extensions
@{
	string fullName = User.Identity.Name;
	string firstName = string.Empty;
	string secondName = string.Empty;
	firstName += fullName[0];
	bool isSurname = false;
    foreach (var character in fullName.Skip(1))
    {
	    if (character.ToString() == character.ToString().ToUpper())
	    {
		    isSurname = true;
	    }
	    if(!isSurname)
	    {
		   firstName += character; 
	    }
	    if (isSurname)
	    {
		    secondName += character;
	    }
	    
	}
}
