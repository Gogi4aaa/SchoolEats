@model ForgotPasswordViewModel
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/LoginStyle/Login.css">
	<title>Смени парола</title>
</head>
<body>
<section>
	<img src="~/images/login.jpg" alt=""/>
</section>
<div class="container">
	<div class="box form-box">

		<p class="text-center fs-4">Смени парола</p>

		<form asp-action="ForgotPassword" asp-controller="User" method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
			<div class="field input">
				<label asp-for="Email" for="username">Имейл</label>
				<input asp-for="Email" aria-required="true" placeholder="email@example.com" type="email" id="username">
				<span asp-validation-for="Email" class="text-danger"></span>
			</div>

			<div class="field">
				<button id="login-submit" type="submit" class="btn">Смени парола</button>
			</div>
			
		</form>
	</div>
</div>
</body>
	</html>
	@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}